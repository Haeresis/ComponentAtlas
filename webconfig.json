{
	"httpPort": 7777,
	"enableIndex": true,
	"enableLess": true,
	"generatesRelativePath": "generates/",
	"commonController": "common.js",
	"commonVariation": "common.json",
	"staticOptions": {
        "maxAge": 0
    },
	"optimizations": {
		"images": {
			"media/images/*.{gif,jpg,png,svg}": "media/images/",
			"media/images/en-gb/*.{gif,jpg,png,svg}": "media/images/en-gb/",
			"media/images/it-it/*.{gif,jpg,png,svg}": "media/images/it-it/"
		}
	},
	"routes": {
		"/home.html": {
			"template": "standard.htm",
			"variation": "home.json"
		},
		"/product.html": {
			"template": "standard.htm",
			"variation": "product.json"
		},
		"/other.html": {
			"template": "standard.htm",
			"variation": "sh.json"
		},
		"/list.html": {
			"template": "simple.htm",
			"variation": "the.json"
		}
	}
}